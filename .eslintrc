{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "react-app"
  ],
  "plugins": [
    "import",
    "promise",
    "compat",
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "class-methods-use-this": 1,
    "react/jsx-one-expression-per-line": 0,
    "jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  }
}
